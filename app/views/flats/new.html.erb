<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Add a new flat</h1>
      <%= simple_form_for @flat do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :descritpion %>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guests %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
